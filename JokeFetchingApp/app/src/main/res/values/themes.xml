<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.JokeFetchingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Action bar background -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- Status bar background -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize text colors -->
        <item name="android:textColorPrimary">@color/textColor</item> <!-- Action bar title text color -->

        <!-- Customize the status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Dark status bar icons -->

        <!-- Customize button appearance -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Define custom button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>


